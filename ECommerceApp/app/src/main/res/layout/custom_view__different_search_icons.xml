<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="@dimen/_2sdp"
    android:layout_margin="@dimen/_4sdp"
    android:layout_height="wrap_content">
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textColor="@android:color/white"
    android:textStyle="bold"
    android:textAllCaps="false"
    android:padding="@dimen/_4sdp"
    android:textSize="@dimen/_16ssp"
    android:text="What's your Way to Search ?"
    android:background="@color/purple_700"
    android:gravity="center"
    android:id="@+id/text"
    />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text"
        android:weightSum="3"
        android:orientation="horizontal">
        <ImageView
            android:layout_weight="1"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            android:src="@drawable/ic_baseline_text_fields_24"
            android:id="@+id/SearchUsingText"
            />
    <ImageView
        android:layout_weight="1"
        android:layout_width="@dimen/_35sdp"
        android:layout_height="@dimen/_35sdp"
        android:src="@drawable/ic_baseline_keyboard_voice_24"
        android:id="@+id/SearchUsingVoice"
        />
    <ImageView
        android:layout_weight="1"
        android:layout_width="@dimen/_35sdp"
        android:layout_height="@dimen/_35sdp"
        android:src="@drawable/ic_baseline_qr_code_2_24"
        android:id="@+id/SearchUsingBarcode"
        />
    </LinearLayout>
</RelativeLayout>