<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="ltr"
    android:textDirection="ltr"
    android:background="@drawable/login"
    android:layout_centerInParent="true"
    tools:context=".LogInActivity">
    <EditText
        android:textDirection="ltr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/welcome_border"
        android:id="@+id/signInEmail"
        android:hint="Email"
        android:layout_centerInParent="true"
        android:textColorHint="@color/white"
        android:textSize="@dimen/_18ssp"
        android:textAllCaps="false"
        android:padding="@dimen/_6sdp"
        android:textColor="@color/white"
        android:layout_marginStart="@dimen/_15sdp"
        android:drawablePadding="@dimen/_6sdp"
        android:drawableLeft="@drawable/ic_baseline_email_24"
        android:layout_marginEnd="@dimen/_15sdp"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/signInEmail"
        android:id="@+id/RL">
        <EditText
            android:inputType="textPassword"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/welcome_border"
            android:id="@+id/signInPassword"
            android:textDirection="ltr"
            android:hint="Password"
            android:drawablePadding="@dimen/_6sdp"
            android:drawableLeft="@drawable/ic_baseline_lock_24"
            android:textColorHint="@color/white"
            android:textSize="@dimen/_18ssp"
            android:textAllCaps="false"
            android:padding="@dimen/_6sdp"
            android:textColor="@color/white"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            />
        <ImageView
            android:layout_width="@dimen/_22sdp"
            android:layout_height="@dimen/_22sdp"
            android:layout_marginTop="@dimen/_21sdp"
            android:layout_marginRight="@dimen/_22sdp"
            android:src="@drawable/ic_baseline_remove_red_eye_24"
            android:layout_alignParentRight="true"
            android:id="@+id/ShowHidePassLogIN"
            />
    </RelativeLayout>

    <com.rey.material.widget.CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/RL"
        android:layout_marginTop="@dimen/_6sdp"
        android:text="Remember me"
        style="@style/Material.Drawable.CheckBox"
        android:textStyle="bold"
        app:cbd_strokeColor="@color/purple_500"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:gravity="center_vertical"
        android:textSize="@dimen/_14ssp"
        android:layout_alignParentStart="true"
        android:id="@+id/CBRemember"
        android:layout_marginStart="@dimen/_15sdp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forget Password?"
        android:textSize="@dimen/_14ssp"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_below="@id/RL"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/_6sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        android:id="@+id/tv_ForgetPass"
        />
    <Button
        android:layout_below="@id/CBRemember"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/welcome_button"
        android:layout_marginBottom="@dimen/_10sdp"
        android:id="@+id/signIn"
        android:text="Login"
        android:textSize="@dimen/_20ssp"
        android:textAllCaps="false"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I'm not admin?"
        android:textSize="@dimen/_18ssp"
        android:textAllCaps="false"
        android:visibility="invisible"
        android:textColor="@color/purple_500"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_below="@id/goToreg"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/_15sdp"
        android:id="@+id/tv_NotAdmin"
        />
    <TextView
        android:layout_below="@id/signIn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Don't have an Account?"
        android:textAllCaps="false"
        android:textSize="@dimen/_17ssp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:id="@+id/reg_massages"
        android:padding="@dimen/_2sdp"
        android:gravity="center"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/reg_massages"
        android:textColor="@color/purple_500"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:textSize="@dimen/_18ssp"
        android:text="register here.."
        android:gravity="center"
        android:id="@+id/goToreg"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I'm admin?"
        android:textSize="@dimen/_18ssp"
        android:textAllCaps="false"
        android:textColor="@color/purple_500"
        android:textAlignment="center"
        android:textStyle="bold"
        android:visibility="visible"
        android:layout_below="@id/goToreg"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/_15sdp"
        android:id="@+id/tv_admin"
        />

</RelativeLayout>