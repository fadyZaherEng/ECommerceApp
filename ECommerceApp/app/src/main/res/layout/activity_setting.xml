<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_height="match_parent"
    android:layoutDirection="ltr"
    tools:context=".SettingActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/purple_700"
        android:id="@+id/nav_SettingsToolbar"
        >
            <TextView
                android:textDirection="ltr"
                android:id="@+id/SettingUpload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Upload Info"
                android:layout_alignParentStart="true"
                android:textColor="@color/white"
                android:layout_marginEnd="@dimen/_10sdp"
                android:textSize="@dimen/_18ssp"
                android:textAllCaps="false"
                android:textStyle="bold"
                />
    </androidx.appcompat.widget.Toolbar>
   <de.hdodenhof.circleimageview.CircleImageView
       android:layout_width="@dimen/_120sdp"
       android:layout_height="@dimen/_120sdp"
       android:src="@drawable/profile"
       android:layout_below="@id/nav_SettingsToolbar"
       android:layout_centerHorizontal="true"
       android:layout_marginTop="@dimen/_15sdp"
       android:layout_marginBottom="@dimen/_5sdp"
       app:civ_border_width="@dimen/_3sdp"
       app:civ_border_color="@color/white"
       android:id="@+id/SettingImage"
       />
    <EditText
        android:textDirection="ltr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:layout_below="@id/SettingImage"
        android:layout_marginTop="@dimen/_25sdp"
        android:hint="Full Name"
        android:padding="@dimen/_8sdp"
        android:textSize="@dimen/_18ssp"
        android:textColor="@android:color/background_dark"
        android:textStyle="bold"
        android:textColorHint="@android:color/darker_gray"
        android:background="@drawable/setting_border"
        android:id="@+id/SettingFullName"
        />
    <EditText
        android:textDirection="ltr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:inputType="number"
        android:layout_below="@id/SettingFullName"
        android:layout_marginTop="@dimen/_5sdp"
        android:hint="Phone Number"
        android:padding="@dimen/_8sdp"
        android:textSize="@dimen/_18ssp"
        android:textColor="@android:color/background_dark"
        android:textStyle="bold"
        android:background="@drawable/setting_border"
        android:id="@+id/settingPhoneNumber"
        android:textColorHint="@android:color/darker_gray"
        />
    <EditText
        android:textDirection="ltr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:layout_below="@id/settingPhoneNumber"
        android:layout_marginTop="@dimen/_5sdp"
        android:hint="Address"
        android:textSize="@dimen/_18ssp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:textColorHint="@android:color/darker_gray"
        android:background="@drawable/setting_border"
        android:padding="@dimen/_8sdp"
        android:id="@+id/settingAddress"
        />
    <EditText
        android:textDirection="ltr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:textAllCaps="false"
        android:layout_below="@id/settingAddress"
        android:hint="Jop"
        android:padding="@dimen/_8sdp"
        android:textSize="@dimen/_18ssp"
        android:textColor="@android:color/background_dark"
        android:textStyle="bold"
        android:textColorHint="@android:color/darker_gray"
        android:background="@drawable/setting_border"
        android:id="@+id/SettingJob"
        />
    <EditText
        android:textDirection="ltr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:textAllCaps="false"
        android:layout_below="@id/SettingJob"
        android:hint="Gender"
        android:padding="@dimen/_8sdp"
        android:textSize="@dimen/_18ssp"
        android:textColor="@android:color/background_dark"
        android:textStyle="bold"
        android:textColorHint="@android:color/darker_gray"
        android:background="@drawable/setting_border"
        android:id="@+id/SettingGender"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:layout_below="@id/SettingGender"
        android:layout_marginTop="@dimen/_5sdp"
        android:text="Select A Birthday"
        android:textSize="@dimen/_18ssp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:background="@drawable/setting_border"
        android:padding="@dimen/_8sdp"
        android:gravity="center"
        android:id="@+id/settingBirthday"
        />
    </RelativeLayout>
    </ScrollView>
