<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_height="match_parent">
<RelativeLayout
    android:padding="@dimen/_2sdp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/purple_700"
    android:layout_margin="@dimen/_4sdp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/purple_700"
        android:orientation="horizontal"
        android:weightSum="2"
        android:id="@+id/L"
        >
        <TextView
            android:background="@color/purple_700"
            android:layout_weight="1"
            android:id="@+id/CusName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Customer Name"
            android:textColor="@android:color/white"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:padding="@dimen/_1sdp"
            android:layout_margin="@dimen/_2sdp"
            android:textSize="@dimen/_15ssp"
            />
        <TextView
            android:background="@color/purple_700"
            android:layout_weight="1"
            android:id="@+id/CusPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Customer Phone"
            android:textColor="@android:color/white"
            android:textAllCaps="false"
            android:padding="@dimen/_1sdp"
            android:layout_margin="@dimen/_2sdp"
            android:textStyle="bold"
            android:textSize="@dimen/_15ssp"
            />
    </LinearLayout>
    <TextView
        android:background="@color/purple_700"
        android:id="@+id/cusAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_1sdp"
        android:layout_marginStart="@dimen/_2sdp"
        android:textSize="@dimen/_15ssp"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:text="Customer Address"
        android:layout_below="@id/L"
        />
    <TextView
        android:background="@color/purple_700"
        android:id="@+id/orderPrice"
        android:layout_marginStart="@dimen/_2sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_1sdp"
        android:textSize="@dimen/_15ssp"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:text="Total Price"
        android:layout_below="@id/cusAddress"
        />
    <TextView
        android:background="@color/purple_700"
        android:id="@+id/orderDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_1sdp"
        android:textSize="@dimen/_15ssp"
        android:layout_marginStart="@dimen/_2sdp"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:text="Date"
        android:layout_below="@id/orderPrice"
        />
    <Button
        android:textDirection="ltr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Show Products Of Order"
        android:textColor="@color/purple_700"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:textAlignment="center"
        android:textSize="@dimen/_17ssp"
        android:layout_below="@id/orderDate"
        android:background="@android:color/white"
        android:layout_marginBottom="@dimen/_5sdp"
        android:id="@+id/btnShowOrder"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        />
</RelativeLayout>
</androidx.cardview.widget.CardView>