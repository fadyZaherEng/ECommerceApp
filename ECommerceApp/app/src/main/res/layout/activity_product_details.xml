<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_250sdp"
        android:background="@color/white"
        android:src="@drawable/open_camera"
        android:id="@+id/ProductImageDetails"
        />
    <TextView
        android:background="@android:color/white"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_below="@id/ProductImageDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_2sdp"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:textSize="@dimen/_20ssp"
        android:textColor="@android:color/black"
        android:text="Product Name"
        android:gravity="center"
        android:id="@+id/ProductNameDetails"
        />
    <TextView
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ProductNameDetails"
        android:textAllCaps="false"
        android:textSize="@dimen/_16ssp"
        android:textColor="@android:color/black"
        android:text="Product Description"
        android:gravity="center"
        android:id="@+id/ProductDesDetails"
        />
    <TextView
        android:background="@android:color/white"
        android:padding="@dimen/_3sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ProductDesDetails"
        android:textAllCaps="false"
        android:textSize="@dimen/_18ssp"
        android:textColor="@android:color/black"
        android:text="Product Price"
        android:gravity="center"
        android:id="@+id/ProductPriceDetails"
        />
    <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
        android:id="@+id/numberBtn"
        android:layout_marginTop="@dimen/_35sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ProductPriceDetails"
        android:layout_centerHorizontal="true"
        app:initialNumber="1"
        android:theme="@style/Material.Drawable.Ripple.Touch.Light"
        app:finalNumber="10"
        app:backGroundColor="@color/purple_700"
        app:textSize="@dimen/_7ssp"
        app:textColor="@android:color/white"
        android:elevation="@dimen/_6sdp"
        />
    </RelativeLayout>
    </ScrollView>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabDetails"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_margin="@dimen/_10sdp"
        android:src="@drawable/cart_logo"
        android:padding="@dimen/_5sdp"
        android:background="@color/purple_700"
        android:layout_marginBottom="@dimen/_10sdp"
        android:scaleType="centerCrop"
        android:backgroundTint="@color/purple_700"
        app:fab_backgroundColor="@color/purple_700"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        />
</RelativeLayout>